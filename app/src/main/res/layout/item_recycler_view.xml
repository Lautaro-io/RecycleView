<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:background="@color/black"
            android:contentDescription="TODO"
            android:id="@+id/imgViewSP"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/spName"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="25dp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgViewSP"
            app:layout_constraintTop_toTopOf="@id/imgViewSP"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="NOMBRE" />

        <TextView
            android:id="@+id/spRealName"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="25dp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgViewSP"
            app:layout_constraintTop_toBottomOf="@+id/spName"
            tools:text="NOMBRE REAL" />

        <TextView
            android:id="@+id/tvPublisher"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="32dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spRealName"
            tools:text="PUBLISHER" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
