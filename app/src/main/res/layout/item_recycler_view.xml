<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="32dp">
    <ImageView
        android:id="@+id/imgViewSP"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="TODO"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="25dp"
        android:id="@+id/spName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "NOMBRE"
        app:layout_constraintStart_toEndOf="@+id/imgViewSP"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="25dp"

        android:id="@+id/spRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "NOMBRE REAL"
        app:layout_constraintStart_toEndOf="@+id/imgViewSP"
        app:layout_constraintTop_toBottomOf="@+id/spName"/>
    <TextView
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="25dp"

        android:id="@+id/tvPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "PUBLISHER"
        app:layout_constraintStart_toEndOf="@+id/imgViewSP"
        app:layout_constraintTop_toBottomOf="@+id/spRealName"/>

</androidx.constraintlayout.widget.ConstraintLayout>